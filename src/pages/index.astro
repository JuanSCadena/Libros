---
import Layout from '../layouts/Layout.astro';
import './src/styles/global.css'
import { getCollection } from 'astro:content';

const books = await getCollection('books')
console.log(books)




---

<Layout title="Libros para programadores">
	
	<main>
		<h1 class="text-center text-7xl font-extrabold pt-20 ">Seb &#128218;

			 <span class="block">Books</span></h1>
	</main>


	<section aria-label="Libros recomendados para programadores">
		<div class="px-4 mx-auto max-w-screen-xl">
			<div class="grid gap-6 md:grid-cols-2">
				{
					books.map(book=>{
						const {slug,data}=book
						const {title,author,img,readtime,description,buy}=
						data

						return(
							<article>
								<img src={`/${img}`} alt={title} class="w-full
								 rounded-lg" />
								<h3>{title}</h3>

							</article>
						)
					})
				}

			</div>
		</div>
		
	</section>
</Layout>
